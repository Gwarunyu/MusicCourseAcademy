<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/lis_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/lis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/lis_thumbnail"
        android:text="Title"
        android:textSize="40sp"
        android:textColor="#3dd18c"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lis_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3dd18c"
        android:layout_alignLeft="@+id/lis_title"
        android:layout_alignStart="@+id/lis_title"
        android:layout_below="@+id/lis_title"
        android:layout_marginTop="8dp"
        android:text="Lesson" />

</RelativeLayout>